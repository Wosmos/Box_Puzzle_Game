<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient with modern colors -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#4158D0"
                android:centerColor="#C850C0"
                android:endColor="#FFCC70"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>

    <!-- Soft glow overlay -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:startColor="#15FFFFFF"
                android:endColor="#00FFFFFF"
                android:centerX="0.7"
                android:centerY="0.3" />
        </shape>
    </item>
</layer-list>